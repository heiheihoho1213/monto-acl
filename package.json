{
  "name": "monto-acl",
  "version": "1.0.0",
  "description": "ACL权限管理系统 - 前后端统一管理",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter monto-acl-be dev",
    "dev:monto-acl-be": "pnpm --filter monto-acl-be dev",
    "dev:nest": "pnpm --filter monto-acl-be start:dev",
    "dev:frontend": "pnpm --filter monto-acl-fe dev",
    "build": "pnpm run --recursive build",
    "build:backend": "pnpm --filter monto-acl-be build",
    "build:nest": "pnpm --filter monto-acl-be build",
    "build:frontend": "pnpm --filter monto-acl-fe build",
    "start": "pnpm run --parallel start",
    "start:backend": "pnpm --filter monto-acl-be start",
    "start:nest": "pnpm --filter monto-acl-be start:prod",
    "start:frontend": "pnpm --filter monto-acl-fe start",
    "install:all": "pnpm install",
    "clean": "pnpm run --recursive clean",
    "clean:node_modules": "rm -rf node_modules backend/node_modules frontend/node_modules monto-acl-be/node_modules",
    "clean:dist": "rm -rf backend/dist frontend/dist monto-acl-be/dist",
    "lint": "pnpm run --recursive lint",
    "lint:backend": "pnpm --filter monto-acl-be lint",
    "lint:nest": "pnpm --filter monto-acl-be lint",
    "lint:frontend": "pnpm --filter monto-acl-fe lint",
    "format": "pnpm run --recursive format",
    "format:backend": "pnpm --filter monto-acl-be format",
    "format:nest": "pnpm --filter monto-acl-fe format",
    "format:frontend": "pnpm --filter monto-acl-fe format",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:mysql": "docker-compose -f docker-compose.mysql.yml up -d",
    "docker:mysql:down": "docker-compose -f docker-compose.mysql.yml down"
  },
  "devDependencies": {
    "@types/node": "^18.0.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.18.0",
    "pnpm": ">=7.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}